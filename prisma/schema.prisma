model LeadDetails {
  id           String   @id @default(cuid())
  name         String
  cc           String
  phone        Int
  email        String
  feeQuoted    Int
  batchTiming  String
  description  String
  leadStatus   String
  leadSource   String   @default("website")
  stack        String
  course       String
  classMode    String
  nextFollowUp DateTime
  createdAt    DateTime @default(now())
  updatedAt    DateTime @default(now()) @updatedAt
}
